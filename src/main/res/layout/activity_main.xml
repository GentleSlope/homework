<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">


    <ImageView
        android:id="@+id/iv_wangyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_icon" />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp"
        android:background="@drawable/button_login"
        android:text="手机号登录"
        android:textSize="15dp"
        android:textColor="#FF0000"
        />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:textColor="#FF0000"
        android:background="@drawable/button_login"
        android:text="注册"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tv_otherLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:text="其它登陆方式"
        android:textSize="11dp"/>

    <TextView
        android:id="@+id/visitor_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/visitor_passage" />

    <ImageButton
        android:id="@+id/ibtn_weixin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="43dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="#00000000"
        android:src="@drawable/ic_wx"/>


    <ImageButton
        android:id="@+id/ibtn_qq"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
       android:layout_toRightOf="@id/ibtn_weixin"
        android:layout_marginLeft="40dp"
        android:background="#00000000"
        android:src="@drawable/ic_qq" />

    <ImageButton
        android:id="@+id/ibtn_weibo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/ibtn_qq"
        android:src="@drawable/ic_wb" />

    <ImageButton
        android:id="@+id/ibtn_wyyx"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_toRightOf="@id/ibtn_weibo"
        android:layout_marginLeft="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="43dp"
        android:src="@drawable/ic_wy" />

    <TextView
        android:id="@+id/tv_wexin"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="微信"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="43dp"
        android:paddingLeft="10dp"

        />

    <TextView
        android:id="@+id/tv_qq"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="QQ"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@id/tv_wexin"
        android:layout_marginLeft="40dp"
        android:paddingLeft="14dp"
        />

    <TextView
        android:id="@+id/tv_webo"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="微博"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@id/tv_qq"
        android:layout_marginLeft="40dp"
        android:paddingLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_wyyx"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="网易邮箱"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="43dp"
        />


</RelativeLayout>
